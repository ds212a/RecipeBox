<ContentDialog
    x:Class="RecipeBox.Controls.EditNoteDialogBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Edit Instruction"
    PrimaryButtonText="Save"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    PrimaryButtonClick="EditNoteDialog_PrimaryButtonClick">

    <RelativePanel x:Name="EditRecipeNotePanel">
        <TextBox x:Name="EditRecipeNoteTextBox" Height="250" Width="500" TextWrapping="Wrap" ScrollViewer.HorizontalScrollMode="Enabled" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollMode="Enabled" ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" />
    </RelativePanel>
</ContentDialog>